{
  "name": "console-prod",
  "version": "0.0.0",
  "description": "Hide console logs in production",
  "main": "dist/index.js",
  "types": "types/global.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emekaorji/console-prod.git"
  },
  "keywords": [
    "console",
    "log",
    "dev",
    "prod",
    "NODE_ENV",
    "environment"
  ],
  "author": {
    "name": "Emeka Orji",
    "email": "emekapraiseo@gmail.com",
    "url": "https://github.com/emekaorji"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emekaorji/console-prod/issues"
  },
  "homepage": "https://github.com/emekaorji/console-prod#readme",
  "devDependencies": {
    "@types/node": "^20.11.15",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "semantic-release": "^23.0.0",
    "typescript": "^5.3.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
